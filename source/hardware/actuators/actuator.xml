<Root>
	<Mosquitto name="client">
		<port>1883</port>
		<username>rsalm</username>
		<password>rsalm</password>
		<hostname>localhost</hostname>
	</Mosquitto>

	<Actuator name="actuator">
		<channels>2</channels>
		<driver>pca9685</driver>
	</Actuator>

	<Channel name="actuator/ch0">
		<id>0</id>
		<path>/sys/class/pwm/pwmchip0</path>
		<enable>1</enable>
		<period>20000000</period>
		<dutycycle>1000000</dutycycle>
	</Channel>

	<Channel name="actuator/ch1">
		<id>1</id>
		<path>/sys/class/pwm/pwmchip0</path>
		<enable>1</enable>
		<period>20000000</period>
		<dutycycle>1000000</dutycycle>
	</Channel>

</Root>
